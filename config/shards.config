# Shard Topology Configuration
# This file defines the multi-shard topology for cross-shard communication

# Total number of shards in the system
system.shards.count = 1

# Base path for resolving relative shard config paths
# Leave empty if using absolute paths or if paths are relative to working directory
system.shards.basePath =

# Shard configuration paths
# Each entry points to a config directory containing hosts.config for that shard
# Format: shard.<id>.configHome = <path to config directory>
# Example for 3 shards:
# shard.0.configHome = shard0/replica0/config
# shard.1.configHome = shard1/replica0/config
# shard.2.configHome = shard2/replica0/config

shard.0.configHome = config

system.timeoutMs=5000
